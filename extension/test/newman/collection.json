        {
          "name": "Get: Customer favorites Copy",
          "event": [
            {
              "listen": "test",
              "script": {
                "id": "40913af9-0c41-42e7-aa75-475492178179",
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "const response = pm.response.json();",
                  "pm.test(\"Response have the correct format\", () => {",
                  "    pm.expect(response.products).to.be.a('array').to.not.be.empty;",
                  "});",
                  "",
                  "pm.test(\"One wishlist item was removed\", () => {",
                  "    pm.expect(response.products.length).to.eql(pm.environment.get(\"wishlist-length\")-1);",
                  "});",
                  "",
                  "pm.test(\"The correct wishlist item removed\", () => {",
                  "    pm.expect(response.products[0].id).to.not.eql(pm.environment.get(\"wishlist-item-id\"));",
                  "});",
                  "",
                  "pm.environment.unset(\"wishlist-item-id\");",
                  "pm.environment.unset(\"wishlist-length\");"
                ]
              }
            }
