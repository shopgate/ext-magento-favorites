{
  "version": "1",
  "pipeline": {
    "id": "shopgate.user.getFavorites.v1",
    "public": true,
    "input": [
      {"key": "sgxsMeta", "id": "10"}
    ],
    "output": [
      {"key": "products", "id": "130"}
    ],
    "steps": [
      {
        "type": "pipeline",
        "id": "shopgate.general.getToken.v1",
        "trusted": true,
        "input": [],
        "output": [
          {"key": "token", "id": "140"}
        ]
      },
      {
        "type": "extension",
        "id": "@shopgate/ext-magento-favorites",
        "path": "@shopgate/ext-magento-favorites/lib/magento/customer/getItems.js",
        "input": [
          {"key": "token", "id": "140"}
        ],
        "output": [
          {"key": "productIds", "id": "120"}
        ]
      },
      {
        "type": "conditional",
        "input": [
          {"key": "productIds", "id": "120"}
        ],
        "expression": {"ok": [{"name":"productIds"}]},
        "then": {
          "type": "pipeline",
          "id": "shopgate.catalog.getProducts.v1",
          "input": [
            {"key": "sgxsMeta", "id": "10"},
            {"key": "productIds", "id": "120"}
          ],
          "output": [
            {"key": "products", "id": "130"}
          ]
        },
        "else": {
          "type": "staticValue",
          "input": [],
          "values": [
            {"key": "products", "value": []}
          ],
          "output": [
            {"key": "products", "id": "130"}
          ]
        }
      },
      {
        "type": "extension",
        "id": "@shopgate/favorites",
        "path": "@shopgate/favorites/sortItems.js",
        "input": [
          {"key": "productIds", "id": "120"},
          {"key": "products", "id": "130"}
        ],
        "output": [
          {"key": "products", "id": "130"}
        ]
      },
      {
        "type": "extension",
        "id": "@shopgate/magento-cart",
        "path": "@shopgate/magento-cart/products/requestParentProductsFromMagento.js",
        "input": [
          {"key": "products", "id": "130"},
          {"key": "token", "id": "140"}
        ],
        "output": [
          {"key": "magentoParentProducts", "id": "150", "optional": true}
        ]
      },
      {
        "type": "extension",
        "id": "@shopgate/magento-cart",
        "path": "@shopgate/magento-cart/products/appendProductVariantsMetadataToProductList.js",
        "input": [
          {"key": "products", "id": "130"},
          {"key": "magentoParentProducts", "id": "150", "optional": true}
        ],
        "output": [
          {"key": "products", "id": "130"}
        ]
      },
      {
        "type": "errorCatchExtension",
        "id": "@shopgate/favorites",
        "path": "@shopgate/favorites/catch/catchGenericError.js",
        "input": [],
        "output": []
      }
    ]
  }
}
